<h1>Listing games</h1>
<p id="notice"><%= notice %></p>
<table class="game-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Score</th>
      <th>Is finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.score %></td>
        <td><%= game.is_finished ? 'yes' : 'no' %></td>
          <td><%= link_to('Continue Playing', game) if !game.is_finished %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Play New Game &rarr;'.html_safe, new_game_path %>